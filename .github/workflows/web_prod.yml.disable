name: web_prod

on:
  push:
    branches: ["dev"]
    paths:
      - "web/src/**"
      - ".github/workflows/web_prod.yml"

permissions:
  id-token: write
  contents: read

jobs:
  web_prod:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Configure AWS (OIDC)
        uses: aws-actions/configure-aws-credentials@v2
        with:
          role-to-assume: arn:aws:iam::608145123666:role/github-web-prod
          aws-region: ap-south-1

      - name: Sync to S3 (prod)
        run: |
          aws s3 sync web/src s3://project1-serverless-prod-website --delete
